# EditorConfig é útil para manter estilos de codificação consistentes entre diferentes editores e IDEs
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.html]
indent_size = 2

[*.css]
indent_size = 2

[*.js]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
